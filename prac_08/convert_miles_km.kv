BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            text: '0'
            id: input_miles
            font_size: 48
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                font_size: 48
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                font_size: 48
                on_press: app.handle_increment(-1)
    Button:
        text: 'Convert'
        font_size: 48
        on_press: app.calculate_result()
    Label:
        text: app.output_kilometers
        font_size: 48
        color: (1, 1, 0, 1)
